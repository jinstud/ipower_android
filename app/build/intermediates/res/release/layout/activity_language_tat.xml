<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_menu"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ipower.tattoo.LanguageTat" >

    <RadioGroup
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <RadioButton
            android:id="@+id/italiano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/italiano" />

        <RadioButton
            android:id="@+id/inglese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inglese" />

        <RadioButton
            android:id="@+id/francese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/francese" />
        
        <RadioButton
            android:id="@+id/spagnolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spagnolo" />

        <RadioButton
            android:id="@+id/portoghese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portoghese" />

        <RadioButton
            android:id="@+id/tedesco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tedesco" />
        
        <RadioButton
            android:id="@+id/russo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/russo" />
        
        <RadioButton
            android:id="@+id/giapponese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/giapponese" />
        
        <RadioButton
            android:id="@+id/cinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cinese" />
    </RadioGroup>

    <Button
        android:id="@+id/conferma_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_rettangolare"
        android:padding="15dp"
        android:text="@string/conferma_language"
        android:textColor="@color/scritte_bottoni" />

</LinearLayout>
