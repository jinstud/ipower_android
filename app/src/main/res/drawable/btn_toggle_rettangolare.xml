<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
	    	<gradient
	                android:angle="45"
	                android:centerColor="@color/centro_btn_np"
	                android:centerY="0.5"
	                android:endColor="@color/lato_btn_np"
	                android:startColor="@color/lato_btn_np" />
		</shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
	    	<corners android:radius="8dp"/>
	    	<gradient
	                android:angle="45"
	                android:centerColor="@color/centro_btn_p"
	                android:centerY="0.5"
	                android:endColor="@color/lato_btn_p"
	                android:startColor="@color/lato_btn_p" />
		</shape>
    </item>
</selector>
