<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_menu"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingTat" >

    <TextView
        style="@style/lb_medie"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="10"
        android:background="@drawable/cornice"
        android:text="@string/lb_devices"
        android:textColor="@color/scritte_bottoni" />
    
    <ListView
        android:id="@+id/lista_marche"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="90" >
        
    </ListView>

    <Button
        android:id="@+id/add_marca"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="10"
        android:background="@drawable/btn_rettangolare"
        android:padding="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/add_marca"
        android:textColor="@color/scritte_bottoni" />

</LinearLayout>
